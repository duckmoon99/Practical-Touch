<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/design_default_color_background"
    android:padding="8dp">

        <TextView
            android:id="@+id/appset_name_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_below="@id/appset_name_widget"
            android:layout_alignStart="@+id/appset_name_widget"
            android:layout_marginEnd="1dp"
            android:layout_toStartOf="@+id/appset_launchbutton_widget"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/appIcon1"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_margin="4dp"
                    android:contentDescription="@string/appicon_desc"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/appIcon2"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_margin="4dp"
                    android:contentDescription="@string/appicon_desc"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/appIcon3"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_margin="4dp"
                    android:contentDescription="@string/appicon_desc"
                    android:gravity="center" />
        </LinearLayout>

        <Button
            android:id="@+id/appset_launchbutton_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="28dp"
            android:text="@string/launch_button"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:ignore="RelativeOverlap" />

</RelativeLayout>